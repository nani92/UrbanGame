<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.nataliajastrzebska.urbangame.SummaryScreen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/endGameTitle"
        android:id="@+id/tv_summaryScreenTitle"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/endGameMsg"
        android:id="@+id/tv_summaryScreenMsg"
        android:textSize="30dp"
        android:layout_below="@+id/tv_summaryScreenTitle"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/endGameMsg"
        android:id="@+id/tv_summaryScreenTime"
        android:textSize="30dp"
        android:layout_below="@+id/tv_summaryScreenDistance"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/endGameMsg"
        android:id="@+id/tv_summaryScreenDistance"
        android:textSize="30dp"
        android:layout_below="@+id/tv_summaryScreenMsg"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
